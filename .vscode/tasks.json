{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-L", "/usr/local/lib",
                "-L", "/usr/lib/x86_64-linux-gnu",
                    "-l", "opencv_core",
                    "-l", "opencv_imgproc",
                    "-l", "opencv_imgcodecs",
                    "-l", "opencv_video",
                    "-l", "opencv_ml",
                    "-l", "opencv_highgui",
                    "-l", "opencv_objdetect",
                    "-l", "opencv_flann",
                    "-l", "opencv_imgcodecs",
                    "-l", "opencv_photo",
                    "-l", "opencv_videoio",
                    "-l", "opencv_calib3d", // for calib3d
                    "-l", "opencv_features2d",

                    "-l", "ceres",
                    "-l", "pthread",  //for ceres
                    "-l","lapack", 
                    "-l","f77blas",  
                    "-l","cxsparse",   
                    "-l","glog", 
                    "-l","cholmod", 
                    "-l","pthread", 
                    
                    "-l", "GL",  // for pangolin
                    "-l", "GLEW", // for pangolin
                    "-l", "pangolin", // for pangolin

                    "-l", "g2o_core",
                    "-l", "g2o_csparse_extension",
                    "-l", "g2o_stuff",
                    "-l", "g2o_ext_csparse",
                    "-l", "g2o_solver_csparse",
                    "-l", "g2o_solver_cholmod",
                    "-l", "g2o_parser",
                    "-l", "g2o_ext_freeglut_minimal",
                    "-l", "g2o_simulator",
                    "-l", "g2o_solver_slam2d_linear",
                    "-l", "g2o_types_icp",
                    "-l", "g2o_interface",
                    "-l", "g2o_types_sba",
                    "-l", "g2o_types_slam3d",
                    "-l", "g2o_cli",
                    "-l", "gomp"

            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}