{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                // "-g",
                // "${file}",
                // "-o",
                // "${fileDirname}/${fileBasenameNoExtension}"
                    "-g", 
                    "-std=c++11", 
                    "${file}", 
                    "-o", 
                    "${fileDirname}/${fileBasenameNoExtension}",// 设置动态链接库
                    // "${fileBasenameNoExtension}.main.out",
                    "-I", "/usr/local/include",
                    // "-I", "/usr/local/include/opencv",
                    // "-I", "/usr/local/include/opencv2",
                    "-L", "/usr/local/lib",
                    "-l", "opencv_core",
                    // "-l", "opencv_imgproc",
                    "-l", "opencv_imgcodecs",
                    // "-l", "opencv_video",
                    // "-l", "opencv_ml",
                    "-l", "opencv_highgui",
                    // "-l", "opencv_objdetect",
                    // "-l", "opencv_flann",
                    // "-l", "opencv_imgcodecs",
                    // "-l", "opencv_photo",
                    // "-l", "opencv_videoio"
                    "-l", "GL",  // for pangolin
                    "-l", "GLEW", // for pangolin
                    "-l", "pangolin", // for pangolin
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}